{
  "name": "hiberbee-actions",
  "version": "1.0.0",
  "private": true,
  "readme": "README.md",
  "description": "Bundle of Dev/Test/Ops Github Actions for Cloud-Native apps CI/CD pipelines execution",
  "keywords": [
    "github-actions",
    "ci-cd",
    "devops"
  ],
  "author": {
    "name": "Vlad Volkov",
    "url": "https://github.com/vladyslavvolkov",
    "email": "vlad@hiberbee.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hiberbee/actions.git"
  },
  "scripts": {
    "clean": "rimraf build",
    "format": "prettier --write **/*.ts",
    "lint": "eslint src/**/*.ts",
    "postinstall": "is-ci || husky install",
    "test": "cross-env RUNNER_TEMP=build jest --coverage",
    "build": "tsc && ncc build",
    "build:all": "yarn clean && yarn format && yarn lint && yarn build:helm && yarn build:skaffold && yarn build:minikube && yarn build:kops",
    "build:helm": "yarn build src/helm.ts --out helm/src",
    "build:skaffold": "yarn build src/skaffold.ts --out skaffold/src",
    "build:minikube": "yarn build src/minikube.ts --out minikube/src",
    "build:kops": "yarn build src/kops.ts --out kops/src"
  },
  "dependencies": {
    "@actions/cache": "^1.0.7",
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/io": "^1.1.1",
    "@actions/tool-cache": "^1.7.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@zeit/ncc": "^0.22.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "jest-circus": "^27.2.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
